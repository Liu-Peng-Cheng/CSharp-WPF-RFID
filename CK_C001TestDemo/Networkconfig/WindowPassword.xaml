<Window x:Class="CK_C001TestDemo.Networkconfig.WindowPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CK_C001TestDemo.Networkconfig"
        mc:Ignorable="d"
        Title="安全验证" Height="120" Width="420.667" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" KeyDown="Window_KeyDown">
    <Grid>
        <Label x:Name="label" Content="请输入密码:" HorizontalAlignment="Left" Margin="19,30,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button_ok" Content="确认" HorizontalAlignment="Left" Margin="236,36,0,0" VerticalAlignment="Top" Width="75" Click="button_ok_Click"/>
        <Button x:Name="button_cancel" Content="取消" HorizontalAlignment="Left" Margin="316,36,0,0" VerticalAlignment="Top" Width="75" Click="button_cancel_Click"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="97,36,0,0" VerticalAlignment="Top" Width="125" MaxLength="8"/>

    </Grid>
</Window>

