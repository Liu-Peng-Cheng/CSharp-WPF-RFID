<Window x:Class="CK_C001TestDemo.MainTabControl.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CK_C001TestDemo.MainTabControl"
        mc:Ignorable="d"
        Title="PopupWindow" 
        Height="150" Width="300" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen"
        Background="Black">
    <StackPanel Orientation="Vertical" Margin="20 30" Background="White">
        <TextBlock x:Name="TextTip" Margin="0 30 0 0 " Height="40" HorizontalAlignment="Center" VerticalAlignment="Center"  FontSize="15" FontWeight="Bold"></TextBlock>
    </StackPanel>
</Window>
